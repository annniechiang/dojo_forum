<% if object.is_collected?(current_user) %>
  <%= link_to "Collected", uncollect_post_path(object, :flag => flag), remote: true, method: :post, class: "btn btn-info" %>
<% else %>
  <%= link_to "Collect", collect_post_path(object, :flag => flag), remote: true, method: :post, class: "btn btn-default" %>
<% end %>