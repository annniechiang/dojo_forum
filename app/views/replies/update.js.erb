if(<%= @flag %> === 0) {
  <% html = j( render :partial => "shared/create_reply", :locals => { post: @post, reply: @reply } ) %>
  var reply_tr = $("#reply-<%= @reply.id %>");
  $(reply_tr).html("<%= html %>")
}
else if(<%= @flag %> === 1) {
  <% html = j( render :partial => "shared/user_comment_list", :locals => { object: @reply } ) %>
  var reply_td = $("#user_reply-<%= @reply.id %>");
  $(reply_td).html("<%= html %>")
}

