<% if object != current_user %> 
  <% if current_user.my_friend?(object) %>
    <%= link_to "Unfriend", friendship_path(object, :name => "Unfriend"), method: :delete, class: "btn btn-primary" %>
  <% else %>
    <% if current_user.wait_for_response_friend?(object) %>
      <%= link_to "Waiting for your response", friends_user_path(current_user), class: "btn btn-default" %>
    <% elsif current_user.wait_for_accept_friend?(object) %>
      <%= link_to "Waiting for being accepted", "#", class: "btn btn-default" %>
    <% else %> 
      <%= link_to "Add friend", friendships_path(friend_id: object), method: :post, class: "btn btn-default" %>
    <% end %>
  <% end %> 
<% end %>